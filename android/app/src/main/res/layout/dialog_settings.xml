<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <View
        android:id="@+id/dragHandle"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:background="#DDDDDD"
        android:layout_marginTop="-4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelTop"
        app:layout_constraintTop_toBottomOf="@id/dragHandle" />

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_dialog_info"
        app:tint="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelTop"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginEnd="8dp"
        android:contentDescription="Info" />

    <ImageButton
        android:id="@+id/btnCancelTop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:contentDescription="@string/cancel_button" />

    <!-- Page Size -->
    <TextView
        android:id="@+id/pageSizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/page_size_label"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/pageSizeToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/pageSizeLabel">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnA4"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="A4"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLetter"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Letter"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLegal"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Legal"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Margins -->
    <TextView
        android:id="@+id/marginsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/margins_label"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="12dp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pageSizeToggleGroup" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/marginsToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/marginsLabel">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStandard"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Standard"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinimal"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Minimal"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Alignment -->
    <TextView
        android:id="@+id/alignmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alignment_label"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="12dp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marginsToggleGroup" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/alignmentToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/alignmentLabel">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLeft"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_align_left"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCenter"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_align_center"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRight"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_align_right"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJustify"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_align_justify"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Font Size -->
    <TextView
        android:id="@+id/fontSizeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/font_size_title"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="12dp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alignmentToggleGroup" />

    <LinearLayout
        android:id="@+id/fontSizeControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/fontSizeTitle">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="20sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/fontSizeValue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="?android:attr/textColorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="20sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/save_button"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/fontSizeControls" />

</androidx.constraintlayout.widget.ConstraintLayout>
